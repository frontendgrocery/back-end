{
    "apps": [{
            "name": "frontendgrocery",
            "script": "app.js",
            "args": "one two",
            "instances": 1,
            "autorestart": true,
            "watch": false,
            "max_memory_restart": "1G",
            "env": {
                "NODE_ENV": "production"
            },
            "env_dev": {
                "NODE_ENV": "development"
            }
        }],

        "deploy": {
            "production": {
                "user": "root",
                "host": ["39.106.47.163"],
                "ssh_options": "StrictHostKeyChecking=no",
                "ref": "origin/master",
                "repo": "git@github.com:frontendgrocery/back-end.git",
                "path": "/var/www/production/grocery-back-end",
                "post-deploy": "git pull origin master && pm2 startOrRestart ecosystem.json --env production"
            }
        }
}